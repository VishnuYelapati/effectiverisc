<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
 xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    android:background="#800080"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/tv_applicationName"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="Application Name"
        android:textSize="30sp"
        android:textColor="#0000ff"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_totalpermissions"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="left"
        android:text="Toal Permissions"
        android:textSize="20sp"
        android:textColor="#0000ff"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_effectiveRiskComm"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Effective Risk Communication"
        android:textSize="25sp"
        android:textColor="#0000ff"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_riskLevel"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Risk Level"
        android:textSize="25sp"
        android:textColor="#0000ff"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="#800080"
        android:src="@drawable/red_circle"/>

    <TextView
        android:id="@+id/tv_riskInfo"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:text="MoreOver,receiving the Risk Interface prior to the Standard led the participants to rate permission information as more important and to make less risky choices when using the standard iterface"
        android:textSize="20sp"
        android:textColor="#0000ff"
        android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

        <ImageView
            android:id="@+id/left_arrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:clickable="true"
            android:src="@drawable/new_left_arrow"/>

        <ImageView
            android:id="@+id/right_arrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:layout_marginLeft="180dp"
            android:src="@drawable/new_right_arrow">

    </ImageView>
        </LinearLayout>
</LinearLayout>
</android.support.v4.widget.NestedScrollView>
